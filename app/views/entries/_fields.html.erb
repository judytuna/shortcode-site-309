<%= form_for @entry do |f| %>
  <br />
  <%= render 'shared/error_messages', :object => f.object %>
  
  <div class="field">
    <%= f.label :"title" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :"shortcode" %><br />
    <%= f.text_area :shortcode %>
  </div>
  <div class="field">
    <%= f.label :"longcode" %><br />
    <%= f.text_area :longcode %>
  </div>
  <div class="field">
    <%= f.label :"comments" %><br />
    <%= f.text_area :comments %>
  </div>
  
  <div class="actions">
    <%= f.submit "Submit entry" %>
  </div>
    
<% end %>