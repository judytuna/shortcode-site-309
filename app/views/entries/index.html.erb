<h1>All Entries</h1>

<%= will_paginate %>

<table class="thumbnail">
  <% cols = 3 %>
  <% i = 0 %>
  <% @entries.each do |entry| %>
  <% url = 'entries/'+String(entry.id) %>
  <% if i%cols==0 %> <tr> <% end %>
    <td>
    <a href = <%= url %> >
    <img width = "192px" height = "108px" src = "http://upload.wikimedia.org/wikipedia/commons/0/0e/Human_Thumbnail.JPG"><br/>
    <center><%= entry.title %></center>
    </td>
  <% if i%cols==cols-1 %> </tr> <% end %>
  <% i+=1 %>
  <% end %>
</table>

<%= will_paginate %>
